modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["jdk11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ReactNativeServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WebDemoServer"

[[workflows.workflow]]
name = "ReactNativeServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node node_modules/react-native/cli.js start --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "WebDemoServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web-version && node server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd simple-server && node server.js"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
