modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["jdk11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UnifiedDeployment"

[[workflows.workflow]]
name = "UnifiedDeployment"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node deployment-server.js"
waitForPort = 3000

[deployment]
run = ["sh", "-c", "node deployment-server.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
