modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["jdk11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StatusChecker"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DebugServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ExpoServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RunEasBuild"

[[workflows.workflow]]
name = "StatusChecker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node check-app-status.js"
waitForPort = 5000

[[workflows.workflow]]
name = "DebugServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node debug-server.js"
waitForPort = 4999

[[workflows.workflow]]
name = "ExpoServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node run-expo-only.js"
waitForPort = 3243

[[workflows.workflow]]
name = "RunEasBuild"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd expo-app && echo 'n' | npx eas-cli build --platform ios --profile preview --non-interactive"

[deployment]
run = ["sh", "-c", "node deployment-server.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 3243
externalPort = 4200

[[ports]]
localPort = 3244
externalPort = 5000

[[ports]]
localPort = 4999
externalPort = 5173

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3002

[[ports]]
localPort = 19006
externalPort = 3003
