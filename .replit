modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["jdk11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ReactNativeStart"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AAMeetingServer"

[[workflows.workflow]]
name = "ReactNativeStart"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd . && npx react-native start --port 5000 --host 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "AAMeetingServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd simple-server && node server.js"

[deployment]
run = ["sh", "-c", "cd simple-server && node server.js"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
