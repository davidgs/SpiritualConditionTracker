require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), "scripts/autolinking")
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods")
require File.join(File.dirname(`node --print "require.resolve('@react-native-community/cli-platform-ios/package.json')"`), "native_modules")

platform :ios, '16.0'

# All new architecture features must be explicitly disabled
ENV['RCT_NEW_ARCH_ENABLED'] = '0'
ENV['USE_HERMES'] = '0'
ENV['USE_FABRIC'] = '0'
ENV['FABRIC_ENABLED'] = '0'
ENV['NEW_ARCH_ENABLED'] = '0'

prepare_react_native_project!

target 'SpiritualConditionTracker' do
  use_expo_modules!
  use_native_modules!
  
  # Standard React Native pods with new architecture explicitly disabled
  use_react_native!(
    :path => "../node_modules/react-native",
    :hermes_enabled => false,
    :fabric_enabled => false
  )
  
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      end
      
      # Disable specific targets that cause issues
      if ['React-Fabric', 'React-RCTFabric', 'React-bridging'].include?(target.name)
        target.build_configurations.each do |config|
          config.build_settings['EXCLUDED_ARCHS'] = 'arm64 x86_64'
        end
      end
    end
    
    react_native_post_install(
      installer,
      File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods.rb"),
      :mac_catalyst_enabled => false
    )
  end
end